{
  "name": "backend",
  "scripts": {
    "test:setup": "npm run db:reset:test && npm run db:seed:test",
    "test:typecheck": "tsc --noEmit --skipLibCheck --project tsconfig.json",
    "watch": "nodemon -r tsconfig-paths/register --files --watch ./src ./bin/run_server.ts",
    "lint:check": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --ext .js,.ts . --fix",
    "format:check": "prettier --check '**/*.{js,ts}'",
    "format:fix": "prettier --write '**/*.{js,ts}'",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "ts-node --transpile-only -r tsconfig-paths/register --files src/db/seed/development.ts",
    "db:seed:test": "dotenv -e .env.test -- ts-node --transpile-only -r tsconfig-paths/register --files src/db/seed/test.ts",
    "db:reset:test": "dotenv -e .env.test -- prisma migrate reset --force --skip-seed",
    "start:test": "BACKEND_PORT=${BACKEND_PORT:-4444} NODE_ENV=test dotenv -e .env.test -- npm run start",
    "start": "ts-node -r tsconfig-paths/register --files ./bin/run_server.ts"
  },
  "dependencies": {
    "@prisma/client": "^4.12.0",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "dotenv-cli": "^7.2.1",
    "express": "^4.18.1",
    "helmet": "^6.0.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^3.2.0",
    "nodemon": "^2.0.20",
    "prisma": "^4.12.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/expect-puppeteer": "^5.0.1",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.5.1",
    "@types/jest-environment-puppeteer": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/method-override": "^0.0.32",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.16.3",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.1.1",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.5.0",
    "jest-puppeteer": "^8.0.6",
    "prettier": "^2.7.1",
    "puppeteer": "^19.11.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
